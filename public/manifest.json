{
  "manifest_version": 3,
  "name": "Ad Blocker",
  "description": "A simple ad blocker built with React.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "declarativeNetRequest",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon48.png"
  }
}
